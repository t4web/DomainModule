{
  "name": "t4web/domain-module",
  "description": "ZF2 Module for Domain implementation.",
  "type": "zf2-module",
  "license": "BSD-3-Clause",
  "keywords": [ "ddd", "zf2 module" ],
  "homepage": "https://github.com/t4web/DomainModule",
  "require": {
    "php": ">=5.5.0",

    "zendframework/zend-modulemanager": "<2.6 >=2.4",
    "zendframework/zend-mvc": "<2.6 >=2.4",
    "zendframework/zend-servicemanager": "<2.6 >=2.4",

    "t4web/domain": "~1.1.0",
    "t4web/infrastructure": "~1.3.9"
  },
  "require-dev" : {
    "phpunit/phpunit": "~4.5",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "T4web\\DomainModule\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "T4web\\DomainModuleTest\\": "tests/"
    }
  },
  "scripts": {
    "check": [
      "@cs",
      "@test"
    ],
    "cs": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit --colors=always"
  }
}
